<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/colorBackgroundBasic">

    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/path_item_layout"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="false"
        android:layout_marginLeft="5px"
        android:layout_marginRight="5px"
        android:orientation="horizontal">

        <FrameLayout
            android:id="@+id/container_fragment_one"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_marginTop="5px"
            android:background="@drawable/screen_background"
            android:layout_weight="1" />
        <!-- android:background="@drawable/screen_background" -->

        <FrameLayout
            android:id="@+id/container_fragment_two"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_marginTop="5px"
            android:background="@drawable/screen_background"
            android:layout_weight="1" />
            <!-- android:background="@drawable/screen_background" -->

    </LinearLayout>

    <LinearLayout
        android:id="@+id/path_item_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/navigation_bottom_layout"
        android:layout_alignParentBottom="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/path_item_one_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_weight="1"
            android:text="Path to item one"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextBasic" />

        <TextView
            android:id="@+id/path_item_two_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5px"
            android:layout_marginRight="5px"
            android:layout_weight="1"
            android:text="Path to item two"
            android:textAlignment="viewStart"
            android:textColor="@color/colorTextBasic" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/navigation_bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_weight="0.1"
        android:background="@color/colorBackgroundNavigationBottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/action_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:background="@color/colorBackgroundNavigationButton"
            android:text="Action"
            android:textAllCaps="false"
            android:textSize="11sp" />

        <Button
            android:id="@+id/hex_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:background="@color/colorBackgroundNavigationButton"
            android:text="Hex editor"
            android:textAllCaps="false"
            android:textSize="11sp" />

        <Button
            android:id="@+id/search_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:background="@color/colorBackgroundNavigationButton"
            android:text="Search"
            android:textAllCaps="false"
            android:textSize="11sp" />

        <Button
            android:id="@+id/tree_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:background="@color/colorBackgroundNavigationButton"
            android:text="Tree"
            android:textAllCaps="false"
            android:textSize="11sp" />

        <Button
            android:id="@+id/more_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5px"
            android:layout_weight="1"
            android:background="@color/colorBackgroundNavigationButton"
            android:text="More"
            android:textAllCaps="false"
            android:textSize="11sp" />

    </LinearLayout>

</RelativeLayout>

